{
    "loggers":{
        "simpleExample":{
            "level":"INFO",
            "propagate":false,
            "handlers":[
                "console"
            ]
        }
    },
    "version":1,
    "root":{
        "level":"INFO",
        "handlers":[
            "console",
            "file",
            "info_file_handler",
            "error_file_handler"
        ]
    },
    "formatters":{
        "simple":{
            "format":"%(levelname)s:%(asctime)s - %(filename)s:%(lineno)s - %(name)s - %(message)s"
        }
    },
    "handlers":{
        "error_file_handler":{
            "formatter":"simple",
            "backupCount":20,
            "level":"ERROR",
            "encoding":"utf8",
            "class":"logging.handlers.RotatingFileHandler",
            "maxBytes":10485760,
            "filename":"errors.log"
        },
        "console":{
            "formatter":"simple",
            "class":"logging.StreamHandler",
            "level":"INFO"
        },
        "info_file_handler":{
            "formatter":"simple",
            "backupCount":20,
            "level":"INFO",
            "encoding":"utf8",
            "class":"logging.handlers.RotatingFileHandler",
            "maxBytes":10485760,
            "filename":"info.log"
        },
        "file":{
            "filename":"logconfig.log",
            "formatter":"simple",
            "backupCount":3,
            "class":"logging.handlers.RotatingFileHandler",
            "maxBytes":10485760
        }
    }
}